<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Me221CrossApp.UI"
             x:Class="Me221CrossApp.UI.DataStreamingPage"
             Title="Real-time Data">
    <Grid RowDefinitions="Auto, *">
        <Label Grid.Row="0"
               Text="ECU Real-time Data Stream"
               Style="{StaticResource Headline}"
               HorizontalOptions="Center"
               Padding="10" />

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding DataPoints}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:DataStreamingPage+RealtimeDataPointViewModel">
                    <Grid Padding="15,5" ColumnDefinitions="*,Auto,Auto">
                        <Label Text="{Binding Name}"
                               Grid.Column="0"
                               VerticalOptions="Center"
                               FontSize="14" />
                        <Label Text="{Binding Id, StringFormat='(ID: {0})'}"
                               Grid.Column="1"
                               VerticalOptions="Center"
                               FontSize="12"
                               TextColor="Gray"
                               Margin="10,0" />
                        <Label Text="{Binding Value, StringFormat='{0:F2}'}"
                               Grid.Column="2"
                               VerticalOptions="Center"
                               FontAttributes="Bold"
                               FontSize="14"
                               WidthRequest="80"
                               HorizontalTextAlignment="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>