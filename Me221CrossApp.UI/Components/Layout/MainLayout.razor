@inherits LayoutComponentBase

@code {
    public bool? IsMobile { get; set; }
}

<DeviceDetector @bind-IsMobile="IsMobile"></DeviceDetector>

@if (IsMobile != null)
{
    <div class="page-container">
        <div class="sidebar">
            <NavMenu IsMobile="(bool)IsMobile"></NavMenu>
        </div>
        <main class="main-content">
            @Body
        </main>
    </div>
}

<style>
    .page-container {
        display: flex;
        min-height: 100vh;
        flex-direction: column;
    }

    .main-content {
        flex-grow: 1;
        padding: var(--spacing-md);
    }

    .sidebar {
        background-color: var(--app-bg-alt-color);
        border-right: 1px solid var(--border-color);
    }

    /* Mobile styles */
    @@media (max-width: 767px) {
    .page-container {
        flex-direction: column-reverse; /* Puts nav at the bottom */
    }

    .main-content {
        padding-bottom: var(--spacing-xl); /* Space for bottom nav */
    }

    .sidebar {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        height: 60px;
        border-right: none;
        border-top: 1px solid var(--border-color);
        z-index: 100;
    }
    }

    /* Desktop styles */
    @@media (min-width: 768px) {
    .page-container {
        flex-direction: row;
    }

    .sidebar {
        flex: 0 0 80px;
        padding-top: var(--spacing-md);
    }
    }
</style>